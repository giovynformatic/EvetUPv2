<ContentPage Title="Eventi" Icon="https://png.icons8.com/event/ultraviolet/50/3498db" >
        <ScrollView BackgroundColor="White">
            <StackLayout Margin="10,10,5,0" Spacing="32" >

                <ListView x:Name="eventiList" ItemTapped="Evento"  BackgroundColor="White" ItemsSource="{Binding DataListEvento}" >
                    <ListView.Header>

                        <StackLayout  Orientation="Horizontal" Margin="0,0,0,0">
                            <custom:CustomEntry CornerRadius="20" 
                                HeightRequest="40" 
                                IsCurvedCornersEnabled="True" 
                                BorderColor="BlueViolet" 
                                WidthRequest="300"    
                                HorizontalOptions="StartAndExpand" 
                                VerticalOptions="CenterAndExpand" 
                                Placeholder="Ricerca" 
                                FontSize="Medium" 
                                PlaceholderColor="Gray"
                                x:Name="searchEv"
                                />
                            <ImageButton HorizontalOptions="End" VerticalOptions="CenterAndExpand" Source="https://png.icons8.com/search/ultraviolet/50/3498db" Clicked="searchButton"/>
                            <ImageButton HorizontalOptions="End" VerticalOptions="CenterAndExpand" Source="https://png.icons8.com/menu/ultraviolet/50/3498db" Clicked="FilterButton"/>
                        </StackLayout>
                    </ListView.Header>
                    <ListView.ItemTemplate  >
                        <DataTemplate >
                            <ViewCell  x:Name="cella"  >
                                <StackLayout  Orientation="Horizontal" Margin="0,20,0,0">
                                   
                                    <ic:CircleImage Source="{Binding Data.Immagine}"
                                          HorizontalOptions="Start"
                                 VerticalOptions="CenterAndExpand" 
                                          />
                                    <Label x:Name="EventoNome" Text="{Binding Data.Titolo}"
                                 
                                 HorizontalOptions="Start"
                                 VerticalOptions="Start"
                                 TextColor="Black" />
                                    <Label Text="{Binding Data.Descrizione}"
                                 HorizontalOptions="Start"
                                 VerticalOptions="End"
                                 TextColor="Black" />

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Footer>
                    </ListView.Footer>
                </ListView>
